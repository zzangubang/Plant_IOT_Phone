<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 배경 !-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:background="#84A56C" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp">

            <android.widget.Button
                android:id="@+id/homeBTN"
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_15dp"
                android:background="@drawable/backhome" />

            <TextView
                android:id="@+id/modelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_toRightOf="@+id/homeBTN"
                android:fontFamily="@font/main_font"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/size_17dp" />

            <android.widget.Button
                android:id="@+id/menuBTN"
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_15dp"
                android:background="@drawable/main_menu" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/lastUpdate"
                    android:fontFamily="@font/main_font"
                    android:text="마지막 업데이트: "
                    android:textColor="#000000"
                    android:textSize="@dimen/size_11dp" />

                <TextView
                    android:id="@+id/lastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:fontFamily="@font/main_font"
                    android:text="0000-00-00 00:00:00"
                    android:textColor="#000000"
                    android:textSize="@dimen/size_11dp" />
            </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/main_font"
                            android:text="온    도(°C)"
                            android:textColor="#000000"
                            android:textSize="@dimen/size_10dp" />

                        <RelativeLayout
                            android:id="@+id/tempLayout"
                            android:layout_width="@dimen/size_70dp"
                            android:layout_height="@dimen/size_70dp"
                            android:background="@drawable/main_value_selector">
                            <TextView
                                android:id="@+id/errTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/size_5dp"
                                android:text="e(U)"
                                android:textSize="@dimen/size_7dp"
                                android:textColor="#000000"
                                android:fontFamily="@font/main_font"/>

                            <TextView
                                android:id="@+id/tempValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text=""
                                android:textSize="@dimen/size_13dp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:fontFamily="@font/num_font"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="습    도(%)"
                            android:textSize="@dimen/size_10dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/main_font"/>

                        <RelativeLayout
                            android:id="@+id/humiLayout"
                            android:layout_width="@dimen/size_70dp"
                            android:layout_height="@dimen/size_70dp"
                            android:background="@drawable/main_value_selector">
                            <TextView
                                android:id="@+id/errHumi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/size_5dp"
                                android:text="e(U)"
                                android:textSize="@dimen/size_7dp"
                                android:textColor="#000000"
                                android:fontFamily="@font/main_font"/>
                            <TextView
                                android:id="@+id/humiValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text=""
                                android:textSize="@dimen/size_13dp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:fontFamily="@font/num_font"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조    도(Lx)"
                            android:textSize="@dimen/size_10dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/main_font"/>

                        <RelativeLayout
                            android:id="@+id/illuLayout"
                            android:layout_width="@dimen/size_70dp"
                            android:layout_height="@dimen/size_70dp"
                            android:background="@drawable/main_value_selector">
                            <TextView
                                android:id="@+id/illuValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text=""
                                android:textSize="@dimen/size_13dp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:fontFamily="@font/num_font"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수    위"
                            android:textSize="@dimen/size_10dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/main_font"/>

                        <LinearLayout
                            android:layout_width="@dimen/size_70dp"
                            android:layout_height="@dimen/size_70dp"
                            android:background="@drawable/main_value_selector"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/levelValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/size_13dp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:fontFamily="@font/num_font"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_5dp"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/modeBTN"
                    android:layout_width="@dimen/size_85dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textOff="MANUAL"
                    android:textOn="AUTO"
                    android:textSize="@dimen/size_17dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/main_font"
                    android:checked="false"
                    android:background="@drawable/main_toggle_selector"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:text="자동/수동 모드를 변경하려면 왼쪽 버튼을 누르세요"
                    android:textSize="@dimen/size_10dp"
                    android:textColor="#474747"
                    android:fontFamily="@font/main_font"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_work_layout_all"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_10dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/fanBTN"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/main_work_selector"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fanT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/main_font"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/size_25dp"
                                android:text="팬 (내부)"
                                android:textColor="#000000"
                                android:textSize="@dimen/size_13dp"
                                android:textStyle="bold" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <ImageView
                                android:id="@+id/fanI"
                                android:layout_width="@dimen/size_25dp"
                                android:layout_height="@dimen/size_25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/size_25dp"
                                android:src="@drawable/fan_off" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/fanStepT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_5dp"
                            android:layout_marginLeft="@dimen/size_10dp"
                            android:text="①"
                            android:textColor="#000000"
                            android:textSize="@dimen/size_13dp"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/fanEBTN"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_work_selector"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fanET"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_25dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/main_font"
                            android:text="팬 (외부)"
                            android:textColor="#000000"
                            android:textSize="@dimen/size_13dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/fanEI"
                            android:layout_width="@dimen/size_25dp"
                            android:layout_height="@dimen/size_25dp"
                            android:layout_marginRight="@dimen/size_25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/fan_off" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ledLBTN"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_work_selector"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ledLT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/size_25dp"
                            android:fontFamily="@font/main_font"
                            android:text="전등 (좌)"
                            android:textColor="#000000"
                            android:textSize="@dimen/size_13dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/ledLI"
                            android:layout_width="@dimen/size_25dp"
                            android:layout_height="@dimen/size_25dp"
                            android:layout_marginRight="@dimen/size_25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/led_off" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ledRBTN"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_work_selector"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ledRT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_25dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/main_font"
                            android:text="전등 (우)"
                            android:textColor="#000000"
                            android:textSize="@dimen/size_13dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/ledRI"
                            android:layout_width="@dimen/size_25dp"
                            android:layout_height="@dimen/size_25dp"
                            android:layout_marginRight="@dimen/size_25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/led_off" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/waterBTN"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_work_selector"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/waterT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_25dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/main_font"
                            android:text="연무기"
                            android:textColor="#000000"
                            android:textSize="@dimen/size_13dp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/waterI"
                            android:layout_width="@dimen/size_25dp"
                            android:layout_height="@dimen/size_25dp"
                            android:layout_marginRight="@dimen/size_25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/water_off" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pumpBTN"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/size_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_work_selector"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pumpT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_25dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/main_font"
                            android:text="펌프"
                            android:textColor="#000000"
                            android:textSize="@dimen/size_13dp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/pumpI"
                            android:layout_width="@dimen/size_25dp"
                            android:layout_height="@dimen/size_25dp"
                            android:layout_marginRight="@dimen/size_25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/pump_off" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:layout_weight="3.3"
            android:background="@drawable/main_webview_layout"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/main_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_5dp"
                android:layout_weight="2" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/main_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_5dp"
                android:layout_weight="8"
                app:tabGravity="fill"
                app:tabIndicatorColor="#84A56C"
                app:tabIndicatorGravity="bottom"
                app:tabMinWidth="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="#84A56C"
                app:tabTextAppearance="@style/tablayout"
                app:tabTextColor="#9E9E9E" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>