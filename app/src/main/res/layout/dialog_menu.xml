<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_layout"
    tools:context=".Menu">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="AJ PLANTs"
            android:textSize="@dimen/size_20dp"
            android:fontFamily="@font/main_font"
            android:textStyle="bold"
            android:textColor="#84A56C"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp"
        android:layout_below="@+id/topBar">
    </RelativeLayout>
    <View
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="#A6A6A6"
        android:layout_below="@+id/header"/>

    <LinearLayout
        android:id="@+id/totalData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginLeft="@dimen/size_2dp"
        android:layout_marginRight="@dimen/size_2dp"
        android:layout_below="@+id/headerView"
        android:background="@drawable/menu_button_selector"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size_15dp"
            android:src="@drawable/menu_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size_15dp"
            android:fontFamily="@font/main_font"
            android:text="상세 데이터"
            android:textColor="#474747"
            android:textSize="@dimen/size_13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/userSetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginLeft="@dimen/size_2dp"
        android:layout_marginRight="@dimen/size_2dp"
        android:layout_below="@+id/totalData"
        android:background="@drawable/menu_button_selector"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_gravity="center"
            android:src="@drawable/menu_user"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_gravity="center"
            android:text="자동 모드 값 설정"
            android:textColor="#474747"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/main_font"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wifiSetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginLeft="@dimen/size_2dp"
        android:layout_marginRight="@dimen/size_2dp"
        android:layout_below="@+id/userSetting"
        android:background="@drawable/menu_button_selector"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_gravity="center"
            android:src="@drawable/menu_wifi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_gravity="center"
            android:text="와이파이 관리"
            android:textColor="#474747"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/main_font"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_marginLeft="@dimen/size_2dp"
        android:layout_marginRight="@dimen/size_2dp"
        android:layout_below="@+id/wifiSetting"
        android:background="@drawable/menu_button_selector"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_gravity="center"
            android:src="@drawable/menu_setting"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_gravity="center"
            android:text="설정"
            android:textColor="#474747"
            android:textSize="@dimen/size_13dp"
            android:fontFamily="@font/main_font"/>
    </LinearLayout>

    <View
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="#A6A6A6"
        android:layout_below="@+id/setting"/>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_below="@+id/footerView"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Copyright 2022. Ahjoo Engineering inc. all rights reserved."
            android:fontFamily="@font/main_font"
            android:textSize="@dimen/size_7dp"
            android:textColor="#979797"/>

    </LinearLayout>

</RelativeLayout>