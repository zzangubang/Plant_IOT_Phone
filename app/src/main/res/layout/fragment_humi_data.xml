<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HumiData">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.3"
        android:gravity="center"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="습도 데이터"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="@dimen/size_17dp"
            android:fontFamily="@font/main_font"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dataFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00"
                android:textColor="#535353"
                android:textSize="@dimen/size_11dp"
                android:fontFamily="@font/main_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "
                android:textColor="#535353"
                android:textSize="@dimen/size_11dp"
                android:fontFamily="@font/main_font"/>
            <TextView
                android:id="@+id/dataLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00"
                android:textColor="#535353"
                android:textSize="@dimen/size_11dp"
                android:fontFamily="@font/main_font"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30dp">
            <LinearLayout
                android:id="@+id/lastBTN"
                android:layout_width="@dimen/size_60dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/data_btn_selector">
                <ImageView
                    android:layout_width="@dimen/size_15dp"
                    android:layout_height="@dimen/size_15dp"
                    android:src="@drawable/data_last"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:text="Last"
                    android:textColor="#000000"
                    android:textSize="@dimen/size_13dp"
                    android:fontFamily="@font/main_font"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/anotherBTN"
                android:layout_width="@dimen/size_85dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/data_btn_selector"
                android:layout_toRightOf="@+id/lastBTN">
                <ImageView
                    android:layout_width="@dimen/size_15dp"
                    android:layout_height="@dimen/size_15dp"
                    android:src="@drawable/data_another"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:text="Another"
                    android:textColor="#000000"
                    android:textSize="@dimen/size_13dp"
                    android:fontFamily="@font/main_font"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="데이터 수집일:  "
                android:textColor="#000000"
                android:textSize="@dimen/size_11dp"
                android:fontFamily="@font/main_font"
                android:layout_toLeftOf="@+id/dataDate"/>
            <TextView
                android:id="@+id/dataDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:text="0000-00-00"
                android:textColor="#000000"
                android:textSize="@dimen/size_11dp"
                android:fontFamily="@font/main_font"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/data_webview_layout"
            android:layout_margin="@dimen/size_10dp">
            <WebView
                android:id="@+id/humiGraph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_10dp"
        android:layout_weight="2">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginBottom="@dimen/size_30dp"
            android:background="@drawable/data_table_layout">
            <TableLayout
                android:id="@+id/humiTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#84A56C"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/main_font"
                        android:padding="@dimen/size_3dp"
                        android:text="날짜"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/size_13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/main_font"
                        android:padding="@dimen/size_3dp"
                        android:text="시간"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/size_13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/main_font"
                        android:padding="@dimen/size_3dp"
                        android:text="값"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/size_13dp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>