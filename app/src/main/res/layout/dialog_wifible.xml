<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_300dp"
    android:layout_height="@dimen/size_500dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:background="#84A56C">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:text="새로운 기기"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="@dimen/size_13dp"
                android:fontFamily="@font/main_font"/>

            <android.widget.Button
                android:id="@+id/newBTN"
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:background="@drawable/wifi_search"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
            <ListView
                android:id="@+id/newList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#7C7C7C"
                android:dividerHeight="0.5dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:background="#84A56C">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:text="등록된 기기"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="@dimen/size_13dp"
                android:fontFamily="@font/main_font"/>

            <android.widget.Button
                android:id="@+id/regBTN"
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:background="@drawable/wifi_search"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
            <ListView
                android:id="@+id/regList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#7C7C7C"
                android:dividerHeight="0.5dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>